{
  "manifest_version": 3,
  "name": "Tweet4Tweet Configuration",
  "version": "0.0.2",
  "description": "Read cookies from the current tab",
  "permissions": [
    "cookies",
    "declarativeNetRequest",
    "webRequest",
    "webRequestAuthProvider",
    "activeTab",
    "storage",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": ["https://x.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
